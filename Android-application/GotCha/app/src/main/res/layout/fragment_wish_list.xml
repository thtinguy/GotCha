<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wishlist_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ListView
        android:id="@+id/wListView"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"></ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to wish list"
        android:id="@+id/addWishButton"
        android:layout_alignTop="@+id/newWish"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newWish"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/addWishButton"
        android:hint="Item title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yourWishList"
        android:id="@+id/textView6"
        android:layout_marginTop="53dp"
        android:textStyle="bold"
        android:layout_below="@+id/addWishButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
